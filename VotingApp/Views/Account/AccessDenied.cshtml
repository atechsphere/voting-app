@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="bi bi-shield-exclamation"></i> Access Denied</h3>
            </div>
            <div class="card-body">
                <i class="bi bi-lock display-1 text-danger"></i>
                <h4>You don't have permission to access this page.</h4>
                <p>Please login with appropriate credentials.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
            </div>
        </div>
    </div>
</div>
